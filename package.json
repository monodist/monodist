{
  "private": true,
  "scripts": {
    "build:all": "pnpm -r build",
    "build:since": "pnpm --filter ...[${SINCE:-$(git merge-base origin/master HEAD)}] build",
    "change": "pnpx changeset",
    "clean:all": "pnpm -r --parallel clean",
    "clean:since": "pnpm --filter ...[${SINCE:-$(git merge-base origin/master HEAD)}] --parallel clean",
    "depcheck:all": "pnpm -r --parallel exec -- depcheck",
    "depcheck:since": "pnpm --filter ...[${SINCE:-$(git merge-base origin/master HEAD)}] --parallel exec -- depcheck",
    "lint:all": "pnpm -r --parallel lint",
    "lint:since": "pnpm --filter ...[${SINCE:-$(git merge-base origin/master HEAD)}] --parallel lint",
    "preinstall": "npx only-allow pnpm",
    "prettier": "prettier . -l",
    "prettier:write": "prettier . -l --write",
    "test:all": "pnpm -r --parallel test",
    "test:since": "pnpm --filter ...[${SINCE:-$(git merge-base origin/master HEAD)}] --parallel test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.10.2",
    "@types/eslint": "~7.2.2",
    "@types/jest": "26.0.13",
    "@types/node": "^14.6.4",
    "depcheck": "^1.2.0",
    "eslint": "^7.8.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-standard-reporter": "~1.1.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "engines": {
    "pnpm": ">=5"
  }
}
